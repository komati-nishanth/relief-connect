# --- Reliability: retries & timeouts ---
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# --- Diagnostics / verbosity ---
foreground-scripts=true
timing=true
loglevel=silly
progress=false

# --- Noise & CI speed ---
audit=false
fund=false

# --- Peer-deps trouble? (uncomment when needed) ---
# legacy-peer-deps=true
# strict-peer-deps=false

# --- Native modules / node-gyp quirks (optional) ---
# build-from-source=true
# scripts-prepend-node-path=true

# --- Production-only installs (optional) ---
# omit=dev

# --- Corporate networks (optional) ---
# registry=https://registry.npmjs.org/
# proxy=http://proxy.company:8080
# https-proxy=http://proxy.company:8080
